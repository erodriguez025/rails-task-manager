<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, "completed!" %> <br />
  <%= f.check_box :completed %> <br />
  <%= f.submit %>
<% end %>

<%= link_to "Back to index", tasks_path %>