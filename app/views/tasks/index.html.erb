<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %> <%= link_to "Delete task", task_destroy_path(task), method: "delete" %> </li>
    <% else %>
      <li><input type="checkbox"><%= link_to task.title, task_path(task) %> <%= link_to "Delete task", task_destroy_path(task), method: "delete" %> </li>    
    <% end %>
  <% end %> 
</ul>


<%= link_to "Add a new task", tasks_new_path %>



